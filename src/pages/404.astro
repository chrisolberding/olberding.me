---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
---

<BaseLayout title="Page Not Found | Chris Olberding" description="The page you're looking for doesn't exist.">
  <Header variant="page" />
  <div class="page-top-border" aria-hidden="true"></div>
  <div class="scroll-progress scroll-progress--left" aria-hidden="true"></div>
  <div class="scroll-progress scroll-progress--right" aria-hidden="true"></div>

  <main class="not-found">
    <h1 class="not-found__title">404</h1>
    <p class="not-found__text">This page doesn't exist. Maybe it did once, or maybe you followed a bad link.</p>
    <a href="/" class="not-found__link">Back to writing <span class="not-found__arrow">&rarr;</span></a>
  </main>

  <div class="page-bottom-border" aria-hidden="true"></div>
</BaseLayout>

<style>
  .page-top-border {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 10px;
    background-color: var(--color-accent);
    z-index: 400;
    pointer-events: none;
  }

  .page-bottom-border {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 10px;
    background-color: var(--color-accent);
    z-index: 400;
    pointer-events: none;
  }

  .scroll-progress--left,
  .scroll-progress--right {
    position: fixed;
    top: 0;
    width: 10px;
    height: 100%;
    background-color: var(--color-accent);
    z-index: 400;
    pointer-events: none;
  }

  .scroll-progress--left { left: 0; }
  .scroll-progress--right { right: 0; }

  .not-found {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    min-height: 100dvh;
    padding: var(--spacing-md);
    text-align: center;
  }

  .not-found__title {
    font-family: 'Outfit', var(--font-sans);
    font-size: 8rem;
    font-weight: 800;
    letter-spacing: -0.04em;
    line-height: 1;
    color: var(--color-accent);
    margin-bottom: var(--spacing-sm);
  }

  .not-found__text {
    font-family: 'Literata', var(--font-serif);
    font-size: 1.1rem;
    color: var(--color-text-light);
    max-width: 400px;
    margin-bottom: var(--spacing-md);
  }

  .not-found__link {
    display: inline-flex;
    align-items: center;
    gap: 0.3em;
    font-family: 'Outfit', var(--font-sans);
    font-size: 0.85rem;
    font-weight: 700;
    color: var(--color-text);
    background: var(--color-text);
    color: var(--color-bg);
    padding: 0.7em 1.8em;
    text-decoration: none;
    transition: background-color 0.25s ease;
  }

  .not-found__link:hover {
    background: var(--color-accent-text);
  }

  .not-found__arrow {
    display: inline-block;
    transition: transform 0.25s ease;
  }

  .not-found__link:hover .not-found__arrow {
    transform: translateX(5px);
  }
</style>
