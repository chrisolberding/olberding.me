  }

  .type-intersection__word--1 {
    top: 0;
    left: -0.1em;
    color: var(--color-accent-text);
    opacity: 0.12;
  }

  .type-intersection__word--2 {
    top: 2.8rem;
    left: 1.5rem;
  }

