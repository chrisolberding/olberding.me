  document.addEventListener('astro:page-load', () => {
    document.querySelectorAll('[data-email-link]').forEach((el) => {
      const u = 'chris';
      const d = 'olberding.me';
      el.setAttribute('href', 'mailto:' + u + '@' + d);
    });

    const bars = document.querySelectorAll('.scroll-progress, .about__scroll-progress') as NodeListOf<HTMLElement>;
    const words = document.querySelectorAll('.type-intersection__word') as NodeListOf<HTMLElement>;
    const intersection = document.querySelector('.type-intersection') as HTMLElement | null;

    // Each word drifts at a different rate [x, y] per px scrolled
    const driftRates = [[0.15, -0.08], [-0.1, 0], [0.2, 0.06]];
    const baseOpacities = [0.12, 0.08, 0.12];

    function updateScroll() {
      const scrollTop = window.scrollY;
      const docHeight = document.documentElement.scrollHeight - window.innerHeight;
      const pct = docHeight > 0 ? Math.min(scrollTop / docHeight, 1) : 0;
      bars.forEach(bar => { bar.style.transform = `scaleY(${pct})`; });

      // Parallax + fade for type intersection words
      if (intersection && words.length) {
        // Simple scroll-based fade — words are near top, so fade over first 600px of scroll
        const fadeMul = Math.max(0, 1 - scrollTop / 600);

        words.forEach((word, i) => {
          const driftX = scrollTop * driftRates[i][0];
          const driftY = scrollTop * driftRates[i][1];
          word.style.transform = `translate(${driftX}px, ${driftY}px)`;
          word.style.opacity = String(baseOpacities[i] * fadeMul);
        });
      }
    }

    window.addEventListener('scroll', updateScroll, { passive: true });
    updateScroll();
  });
</script>

