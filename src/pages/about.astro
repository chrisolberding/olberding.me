          word.style.transform = `translate(${driftX}px, ${driftY}px)`;
          word.style.opacity = String(baseOpacities[i] * fadeMul);
        });
      }
    }

    let lastScrollY = -1;
    function tick() {
      if (window.scrollY !== lastScrollY) {
        lastScrollY = window.scrollY;
        updateScroll();
      }
      requestAnimationFrame(tick);
    }
