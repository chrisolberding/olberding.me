---
import { Image } from 'astro:assets';
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Sidebar from '../components/Sidebar.astro';
import ArticleCard from '../components/ArticleCard.astro';
import { getCollection } from 'astro:content';
import heroImg from '../assets/hero.jpg';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);

const latestPost = posts[0];
---

<BaseLayout title="The Life and Times of Christopher Olberding">
  <Header variant="home" />

  <div class="home">
    <main class="home__main">
      <div class="home__hero">
        <Image src={heroImg} alt="" class="home__hero-img" widths={[600, 900, 1200]} sizes="(max-width: 768px) 100vw, 65vw" />
      </div>

      <section class="home__articles">
        {posts.map((post) => (
          <ArticleCard
            title={post.data.title}
            description={post.data.description}
            href={`/blog/${post.id}`}
            date={post.data.date}
          />
        ))}
      </section>
    </main>

    <div class="home__sidebar">
      <Sidebar />
    </div>
  </div>
</BaseLayout>

<style>
  .home {
    /* Right sidebar is fixed; left content takes remaining space */
    margin-right: var(--sidebar-width);
  }

  .home__main {
    position: relative;
  }

  .home__sidebar {
    position: fixed;
    top: 0;
    right: 0;
    width: var(--sidebar-width);
    height: 100vh;
    overflow-y: auto;
    z-index: 10;
  }

  /* Hero stays in place behind the articles panel */
  .home__hero {
    position: sticky;
    top: 0;
    width: 100%;
    height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    z-index: 0;
  }

  .home__hero-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Articles panel scrolls up over the hero */
  .home__articles {
    position: relative;
    z-index: 1;
    background-color: var(--color-bg);
    padding: var(--spacing-lg) var(--spacing-md);
    padding-left: 6rem;
    padding-right: 6rem;
    min-height: 100vh;

  }

  /* Responsive */
  @media (max-width: 900px) {
    .home {
      margin-right: 0;
      display: flex;
      flex-direction: column;
    }

    .home__sidebar {
      position: relative;
      width: 100%;
      height: auto;
      order: -1;
    }

    .home__hero {
      position: relative;
      height: 50vh;
    }

    .home__hero-placeholder span {
      font-size: 2.4rem;
    }

    .home__articles {
      padding: var(--spacing-md);
      padding-left: 6rem;
      max-width: 680px;
      margin: 0 auto;
    }
  }
</style>
