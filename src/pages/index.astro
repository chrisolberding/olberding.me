---
import { Image } from 'astro:assets';
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Sidebar from '../components/Sidebar.astro';
import ArticleCard from '../components/ArticleCard.astro';
import { getCollection } from 'astro:content';
import heroImg from '../assets/hero.jpg';

const allPosts = (await getCollection('blog')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);

const published = allPosts.filter(p => !p.data.draft);
const drafts = allPosts.filter(p => p.data.draft);
---

<BaseLayout title="Christopher Olberding" description="Writing about brand, technology, marketing, and what it means to lead where those things intersect.">
  <Header variant="home" />
  <div class="page-top-border" aria-hidden="true" style="position:fixed;top:0;left:0;right:var(--sidebar-width);height:10px;background:var(--color-accent);z-index:400;pointer-events:none;"></div>
  <div class="scroll-progress" aria-hidden="true" style="position:fixed;top:0;left:0;width:10px;height:100%;background:var(--color-accent);transform-origin:top;transform:scaleY(0);z-index:400;pointer-events:none;"></div>
  <div class="scroll-progress-right" aria-hidden="true"></div>

  <div class="home">
    <main class="home__main">
      <!-- <div class="home__hero">
        <Image src={heroImg} alt="" class="home__hero-img" widths={[600, 900, 1200]} sizes="(max-width: 768px) 100vw, 65vw" />
      </div> -->

      <section class="home__articles">
        {published.map((post) => (
          <ArticleCard
            title={post.data.title}
            description={post.data.description}
            href={`/blog/${post.id}`}
            date={post.data.date}
          />
        ))}
      </section>

      {drafts.length > 0 && (
        <section class="home__drafts">
          <h2 class="home__section-label">In Development</h2>
          {drafts.map((post) => (
            <article class="draft-card">
              <h3 class="draft-card__title">{post.data.title}</h3>
              {post.data.description && <p class="draft-card__description">{post.data.description}</p>}
            </article>
          ))}
        </section>
      )}
    </main>

    <div class="home__sidebar">
      <Sidebar />
    </div>
  </div>
  <div class="page-bottom-border" aria-hidden="true" style="width:100%;height:10px;background:var(--color-accent);margin-right:var(--sidebar-width);"></div>
</BaseLayout>

<script>
  document.addEventListener('astro:page-load', () => {
    const bars = document.querySelectorAll('.scroll-progress, .scroll-progress-right') as NodeListOf<HTMLElement>;
    if (bars.length) {
      function updateProgress() {
        const scrollTop = window.scrollY;
        const docHeight = document.documentElement.scrollHeight - window.innerHeight;
        const pct = docHeight > 0 ? Math.min(scrollTop / docHeight, 1) : 0;
        bars.forEach(bar => { bar.style.transform = `scaleY(${pct})`; });
      }
      window.addEventListener('scroll', updateProgress, { passive: true });
      updateProgress();
    }
  });
</script>

<style>
  .home {
    /* Right sidebar is fixed; left content takes remaining space */
    margin-right: var(--sidebar-width);
  }

  .home__main {
    position: relative;
  }

  .home__sidebar {
    position: fixed;
    top: 0;
    right: 0;
    width: var(--sidebar-width);
    height: 100vh;
    height: 100dvh;
    overflow-y: auto;
    z-index: 10;
  }

  /* Hero stays in place behind the articles panel */
  .home__hero {
    position: -webkit-sticky;
    position: sticky;
    top: 0;
    width: 100%;
    height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    z-index: 0;
  }

  .home__hero-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Articles panel scrolls up over the hero */
  .home__articles {
    position: relative;
    z-index: 1;
    background-color: var(--color-bg);
    padding: var(--spacing-lg) var(--spacing-md) 1.5rem;
    padding-left: 8rem;
    padding-right: 6rem;
  }

  .scroll-progress-right {
    position: fixed;
    top: 0;
    right: 0;
    width: 10px;
    height: 100%;
    background-color: var(--color-accent);
    transform-origin: top;
    transform: scaleY(0);
    z-index: 400;
    pointer-events: none;
    display: none;
  }

  /* Responsive */
  @media (max-width: 900px) {
    .scroll-progress-right {
      display: block;
    }
    .page-top-border {
      right: 0 !important;
    }

    .page-bottom-border {
      margin-right: 0 !important;
    }

    .home {
      margin-right: 0;
      display: flex;
      flex-direction: column;
    }

    .home__sidebar {
      position: relative;
      width: 100%;
      height: auto;
      order: -1;
    }

    .home__hero {
      position: relative;
      height: 50vh;
    }

    .home__hero-placeholder span {
      font-size: 2.4rem;
    }

    .home__articles {
      padding: var(--spacing-md);
      padding-left: 6rem;
      max-width: 680px;
      margin: 0 auto;
    }
  }

  @media (max-width: 685px) {
    .home__articles {
      padding-left: var(--spacing-lg);
      padding-right: var(--spacing-lg);
    }
  }

  /* In Development section */
  .home__drafts {
    position: relative;
    z-index: 1;
    background-color: var(--color-bg);
    padding: 0 var(--spacing-md) var(--spacing-lg);
    padding-left: 8rem;
    padding-right: 6rem;
  }

  .home__section-label {
    font-family: 'Outfit', var(--font-sans);
    font-size: 0.7rem;
    font-weight: 700;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--color-accent-text);
    padding-top: 3.5rem;
    margin-bottom: 1.5rem;
    border-top: 10px solid var(--color-accent);
    margin-top: 0;
  }

  .draft-card {
    margin-bottom: var(--spacing-md);
    opacity: 0.6;
  }

  .draft-card__title {
    font-family: 'Outfit', var(--font-sans);
    font-size: 1.3rem;
    font-weight: 700;
    line-height: 1.2;
    letter-spacing: -0.02em;
    color: var(--color-text);
  }

  .draft-card__description {
    font-family: 'Literata', var(--font-serif);
    font-size: 0.85rem;
    color: var(--color-text-light);
    line-height: 1.5;
    margin-top: 0.3em;
  }

  @media (max-width: 900px) {
    .home__drafts {
      padding: 0 var(--spacing-md) var(--spacing-lg);
      padding-left: 6rem;
      max-width: 680px;
      margin: 0 auto;
    }
  }

  @media (max-width: 685px) {
    .home__drafts {
      padding-left: var(--spacing-lg);
      padding-right: var(--spacing-lg);
    }
  }
</style>
