---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  title: string;
  description?: string;
  href: string;
  date?: Date;
  cardImage?: ImageMetadata;
}

const { title, description, href, date, cardImage } = Astro.props;

const formattedDate = date
  ? date.toLocaleDateString('en-US', {
      year: 'numeric',
      month: 'long',
      day: 'numeric',
    })
  : null;
---

<article class="article-card">
  <a href={href}>
    {formattedDate && <span class="article-card__date">{formattedDate}</span>}
    <h2 class="article-card__title">{title}</h2>
    {description && <p class="article-card__description">{description}</p>}
    {cardImage && (
      <div class="article-card__image-wrap">
        <Image
          src={cardImage}
          alt=""
          class="article-card__image"
          widths={[400, 600, 800]}
          sizes="(max-width: 685px) calc(100vw - 4rem), (max-width: 900px) 500px, calc(65vw - 14rem)"
        />
      </div>
    )}
  </a>
</article>

<style>
  .article-card {
    margin-bottom: var(--spacing-md);
  }

  .article-card a {
    text-decoration: none;
    display: block;
  }

  .article-card__date {
    display: block;
    font-family: var(--font-sans);
    font-size: 0.6rem;
    font-weight: 600;
    letter-spacing: 0;
    color: var(--color-accent-text);
    margin-bottom: 0.2em;
    text-transform: uppercase;
  }

  .article-card__title {
    font-family: 'Outfit', var(--font-sans);
    font-size: 1.6rem;
    font-weight: 700;
    line-height: 1.2;
    letter-spacing: -0.02em;
    color: var(--color-text);
    transition: color 0.2s;
  }

  .article-card a:hover .article-card__title {
    color: var(--color-accent-text);
  }

  .article-card__description {
    font-family: 'Literata', var(--font-serif);
    font-size: 0.9rem;
    color: #333;
    line-height: 1.5;
    margin-top: 0.3em;
  }

  .article-card__image-wrap {
    margin-top: 0.6em;
    overflow: hidden;
  }

  .article-card__image {
    width: 100%;
    display: block;
    transition: transform 0.2s, opacity 0.2s;
  }

  .article-card a:hover .article-card__image {
    transform: scale(1.02);
    opacity: 0.92;
  }
</style>
