---
interface Props {
  variant?: 'home' | 'page';
}

const { variant = 'page' } = Astro.props;
---

<header class:list={['header', `header--${variant}`]}>
  <button class="logo-btn" aria-label="Toggle navigation" id="nav-toggle">
    <svg class="logo-mark" width="44" height="44" viewBox="0 0 120 120" fill="none">
      <circle class="logo-mark__bg" cx="60" cy="60" r="49" fill="rgba(255,255,255,0.9)" opacity="0"/>
      <g class="logo-mark__outer">
        <path d="M75.7 103.2 A 46 46 0 0 0 75.7 16.8" stroke="var(--color-accent)" stroke-width="7" stroke-linecap="round"/>
        <path d="M75.7 16.8 A 46 46 0 1 0 75.7 103.2" stroke="currentColor" stroke-width="7" stroke-linecap="round"/>
      </g>
      <circle class="logo-mark__inner" cx="60" cy="60" r="22" stroke="currentColor" stroke-width="7" fill="none"/>
    </svg>
  </button>
</header>

<nav class="mobile-nav" id="mobile-nav" aria-hidden="true" inert>
  <ul class="mobile-nav__links">
    <li><a href="/">Writing</a></li>
    <li><a href="/about">Me</a></li>
  </ul>
  <div class="mobile-nav__icons">
    <a href="#" aria-label="Email" data-contact-open>
      <svg width="28" height="28" viewBox="0 0 24 24" fill="currentColor"><path d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/></svg>
    </a>
    <a href="https://www.linkedin.com/in/chrisolberding/" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
      <svg width="28" height="28" viewBox="0 0 24 24" fill="currentColor"><path d="M19 3a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h14m-.5 15.5v-5.3a3.26 3.26 0 0 0-3.26-3.26c-.85 0-1.84.52-2.32 1.3v-1.11h-2.79v8.37h2.79v-4.93c0-.77.62-1.4 1.39-1.4a1.4 1.4 0 0 1 1.4 1.4v4.93h2.79M6.88 8.56a1.68 1.68 0 0 0 1.68-1.68c0-.93-.75-1.69-1.68-1.69a1.69 1.69 0 0 0-1.69 1.69c0 .93.76 1.68 1.69 1.68m1.39 9.94v-8.37H5.5v8.37h2.77z"/></svg>
    </a>
  </div>
</nav>

<div class="contact-modal" id="contact-modal" aria-hidden="true" inert>
  <button class="contact-modal__close" id="contact-close" aria-label="Close">
    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"><line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/></svg>
  </button>
  <form class="contact-modal__form" id="contact-form" action="https://formspree.io/f/mykdevel" method="POST" novalidate>
    <h2 class="contact-modal__title">Get in touch</h2>
    <label class="contact-modal__label">
      Name
      <input type="text" name="name" required class="contact-modal__input" autocomplete="name" />
    </label>
    <label class="contact-modal__label">
      Email
      <input type="email" name="email" required class="contact-modal__input" autocomplete="email" />
    </label>
    <label class="contact-modal__label">
      Message
      <textarea name="message" required rows="5" class="contact-modal__input contact-modal__textarea"></textarea>
    </label>
    <button type="submit" class="contact-modal__submit">Send</button>
    <p class="contact-modal__status" id="contact-status"></p>
  </form>
</div>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 300;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    padding: var(--spacing-md);
    pointer-events: none;
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  @media (max-width: 900px) {
    .header--page.is-hidden,
    .header--home.is-hidden {
      opacity: 0;
      transform: translateY(-100%);
      pointer-events: none;
    }
  }

  .header--home {
    right: var(--sidebar-width);
  }

  /* Logo button */
  .logo-btn {
    background: none;
    border: none;
    cursor: pointer;
    pointer-events: auto;
    padding: 0;
    width: 44px;
    height: 44px;
    color: var(--color-text);
    line-height: 0;
  }

  .logo-mark__bg {
    transition: opacity 0.3s ease;
  }

  @media (max-width: 900px) {
    .header--page.is-scrolled .logo-mark__bg,
    .header--home.is-scrolled .logo-mark__bg {
      opacity: 1;
    }
  }

  /* Logo mark animations */
  .logo-mark__outer {
    transform-origin: 60px 60px;
  }

  .logo-mark__inner {
    transform-origin: 60px 60px;
  }

  .logo-mark.is-animating .logo-mark__outer {
    animation: logo-spin 3s cubic-bezier(0.2, 0, 0.1, 1) forwards;
  }

  .logo-mark.is-animating .logo-mark__inner {
    animation: logo-pulse 3s ease-in-out forwards;
  }

  @keyframes logo-spin {
    0% { transform: rotate(0deg); }
    60% { transform: rotate(1080deg); }
    100% { transform: rotate(1080deg); }
  }

  @keyframes logo-pulse {
    0%, 100% { transform: scale(1); }
    30% { transform: scale(1.15); }
    60% { transform: scale(1); }
  }

  /* Mobile nav overlay */
  .mobile-nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--color-bg);
    z-index: 200;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease, z-index 0s 0.3s;
    box-shadow: inset 10px 0 0 0 var(--color-accent),
                inset -10px 0 0 0 var(--color-accent),
                inset 0 -10px 0 0 var(--color-accent);
  }

  .mobile-nav.is-open {
    opacity: 1;
    pointer-events: auto;
    z-index: 260;
    transition: opacity 0.3s ease, z-index 0s 0s;
  }

  .mobile-nav__links {
    list-style: none;
    text-align: center;
  }

  .mobile-nav__links li {
    margin-bottom: var(--spacing-sm);
  }

  .mobile-nav__links a {
    font-family: 'Outfit', var(--font-sans);
    font-size: 2.4rem;
    font-weight: 700;
    letter-spacing: -0.02em;
    color: var(--color-text);
    transition: color 0.2s;
  }

  .mobile-nav__links a:hover {
    color: var(--color-accent-text);
  }

  .mobile-nav__icons {
    display: flex;
    gap: 1.2rem;
    margin-top: var(--spacing-sm);
  }

  .mobile-nav__icons a {
    color: var(--color-text);
    display: flex;
    transition: opacity 0.2s;
  }

  .mobile-nav__icons a:hover {
    color: var(--color-accent-text);
  }

  /* Contact modal overlay */
  .contact-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--color-bg);
    z-index: 250;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
    box-shadow: inset 10px 0 0 0 var(--color-accent),
                inset -10px 0 0 0 var(--color-accent),
                inset 0 -10px 0 0 var(--color-accent);
  }

  .contact-modal.is-open {
    opacity: 1;
    pointer-events: auto;
  }

  .contact-modal__close {
    position: absolute;
    top: var(--spacing-md);
    right: var(--spacing-md);
    background: none;
    border: none;
    cursor: pointer;
    color: var(--color-text);
    padding: 0;
    line-height: 0;
    transition: color 0.2s;
  }

  .contact-modal__close:hover {
    color: var(--color-accent-text);
  }

  .contact-modal__form {
    width: 100%;
    max-width: 480px;
    padding: 0 var(--spacing-md);
  }

  .contact-modal__title {
    font-family: 'Outfit', var(--font-sans);
    font-size: 2rem;
    font-weight: 700;
    letter-spacing: -0.02em;
    color: var(--color-text);
    margin-bottom: var(--spacing-md);
    position: relative;
  }

  .contact-modal__title::before {
    content: '';
    position: absolute;
    top: 0;
    left: -2.5rem;
    width: 10px;
    height: 100%;
    background-color: var(--color-accent);
  }

  @media (max-width: 640px) {
    .contact-modal__title::before {
      display: none;
    }
  }

  .contact-modal__label {
    display: flex;
    flex-wrap: wrap;
    align-items: baseline;
    justify-content: space-between;
    font-family: 'Outfit', var(--font-sans);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--color-text);
    margin-bottom: var(--spacing-sm);
  }

  .contact-modal__input {
    flex-basis: 100%;
    width: 100%;
    font-family: 'Literata', var(--font-serif);
    font-size: 0.9rem;
    padding: 0.6em;
    margin-top: 0.3em;
    border: 1px solid rgba(0, 0, 0, 0.15);
    background: var(--color-bg);
    color: var(--color-text);
    border-radius: 0;
    outline: none;
    transition: border-color 0.2s;
  }

  .contact-modal__input:focus {
    border-color: var(--color-accent);
  }

  .contact-modal__input.is-invalid {
    border-color: var(--color-accent-text);
  }

  .contact-modal__error {
    font-family: 'Outfit', var(--font-sans);
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-accent-text);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  .contact-modal__error.is-visible {
    opacity: 1;
  }

  .contact-modal__textarea {
    resize: vertical;
    min-height: 120px;
  }

  .contact-modal__submit {
    font-family: 'Outfit', var(--font-sans);
    font-size: 0.85rem;
    font-weight: 700;
    padding: 0.7em 1.8em;
    background: var(--color-text);
    color: var(--color-bg);
    border: none;
    cursor: pointer;
    transition: opacity 0.2s;
    margin-top: var(--spacing-sm);
  }

  .contact-modal__submit:hover {
    background: var(--color-accent-text);
  }

  .contact-modal__submit:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .contact-modal__status {
    font-family: 'Outfit', var(--font-sans);
    font-size: 0.85rem;
    margin-top: var(--spacing-sm);
    min-height: 1.2em;
  }

  .contact-modal__status--success {
    color: var(--color-accent-text);
  }

  .contact-modal__status--error {
    color: #c0392b;
  }
</style>

<script>
  document.addEventListener('astro:page-load', () => {
    const toggle = document.getElementById('nav-toggle');
    const nav = document.getElementById('mobile-nav');
    const logo = document.querySelector('.logo-mark') as HTMLElement | null;

    function playAnimation() {
      if (!logo) return;
      const running = logo.getAnimations({ subtree: true }).some(a => a.playState === 'running');
      if (running) return;

      logo.classList.remove('is-animating');
      requestAnimationFrame(() => {
        requestAnimationFrame(() => {
          logo.classList.add('is-animating');
        });
      });
    }

    // Play on load
    playAnimation();

    // Play on hover
    toggle?.addEventListener('mouseenter', () => {
      playAnimation();
    });

    // Toggle nav open/close
    toggle?.addEventListener('click', () => {
      const isOpen = nav?.classList.contains('is-open');
      if (isOpen) {
        nav?.classList.remove('is-open');
        nav?.setAttribute('aria-hidden', 'true');
        nav?.setAttribute('inert', '');
      } else {
        nav?.classList.add('is-open');
        nav?.setAttribute('aria-hidden', 'false');
        nav?.removeAttribute('inert');
      }
    });

    // Contact modal ref (used by scroll handler below)
    const contactModal = document.getElementById('contact-modal');

    // Scroll-to-hide on page variant at narrow widths
    const header = document.querySelector('.header') as HTMLElement | null;
    const isPage = header?.classList.contains('header--page');
    const isNarrowHome = header?.classList.contains('header--home') && window.matchMedia('(max-width: 685px)').matches;
    if (header && (isPage || isNarrowHome)) {
      let prevY = window.scrollY;
      let dirY = window.scrollY;
      let goingDown = false;
      let ticking = false;
      const threshold = 15;
      const delta = 8;
      window.addEventListener('scroll', () => {
        if (ticking) return;
        ticking = true;
        requestAnimationFrame(() => {
          // Don't hide while contact modal is open
          if (contactModal?.classList.contains('is-open')) {
            ticking = false;
            return;
          }
          const y = window.scrollY;
          // detect direction change and reset anchor
          const nowDown = y > prevY;
          if (nowDown !== goingDown) {
            dirY = prevY;
            goingDown = nowDown;
          }
          const travel = Math.abs(y - dirY);
          if (y <= threshold) {
            header.classList.remove('is-hidden', 'is-scrolled');
          } else {
            header.classList.add('is-scrolled');
            if (goingDown && travel > delta) {
              header.classList.add('is-hidden');
            } else if (!goingDown && travel > delta) {
              header.classList.remove('is-hidden');
            }
          }
          prevY = y;
          ticking = false;
        });
      }, { passive: true });
    }

    // Contact modal
    const contactClose = document.getElementById('contact-close');
    const contactForm = document.getElementById('contact-form') as HTMLFormElement | null;
    const contactStatus = document.getElementById('contact-status');

    function openContact() {
      // Close nav if open
      if (nav?.classList.contains('is-open')) {
        nav.classList.remove('is-open');
        nav.setAttribute('aria-hidden', 'true');
        nav.setAttribute('inert', '');
      }
      contactModal?.classList.add('is-open');
      contactModal?.setAttribute('aria-hidden', 'false');
      contactModal?.removeAttribute('inert');
    }

    function closeContact() {
      contactModal?.classList.remove('is-open');
      contactModal?.setAttribute('aria-hidden', 'true');
      contactModal?.setAttribute('inert', '');
    }

    // Any element with data-contact-open opens the modal
    document.querySelectorAll('[data-contact-open]').forEach((el) => {
      el.addEventListener('click', (e) => {
        e.preventDefault();
        openContact();
      });
    });

    contactClose?.addEventListener('click', closeContact);

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && contactModal?.classList.contains('is-open')) {
        closeContact();
      }
    });

    // Clear validation on input
    contactForm?.querySelectorAll('.contact-modal__input').forEach((input) => {
      input.addEventListener('input', () => {
        input.classList.remove('is-invalid');
        const err = input.parentElement?.querySelector('.contact-modal__error') as HTMLElement | null;
        if (err) {
          err.classList.remove('is-visible');
          err.textContent = '';
        }
      });
    });

    // Validate and submit
    function getOrCreateError(label: Element): HTMLElement {
      let err = label.querySelector('.contact-modal__error') as HTMLElement | null;
      if (!err) {
        err = document.createElement('span');
        err.className = 'contact-modal__error';
        // Copy Astro scoped attribute so scoped CSS applies
        const scopeAttr = Array.from(label.attributes).find(a => a.name.startsWith('data-astro-cid-'));
        if (scopeAttr) err.setAttribute(scopeAttr.name, scopeAttr.value);
        // Insert before the input (after the label text)
        const input = label.querySelector('.contact-modal__input');
        if (input) label.insertBefore(err, input);
      }
      return err;
    }

    function validateForm(): boolean {
      if (!contactForm) return false;
      let valid = true;
      contactForm.querySelectorAll('.contact-modal__input').forEach((input) => {
        const field = input as HTMLInputElement | HTMLTextAreaElement;
        const label = field.parentElement!;
        const err = getOrCreateError(label);
        if (!field.value.trim()) {
          field.classList.add('is-invalid');
          err.textContent = 'Required';
          requestAnimationFrame(() => err.classList.add('is-visible'));
          valid = false;
        } else if (field.type === 'email' && !/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(field.value.trim())) {
          field.classList.add('is-invalid');
          err.textContent = 'Invalid email';
          requestAnimationFrame(() => err.classList.add('is-visible'));
          valid = false;
        } else {
          field.classList.remove('is-invalid');
          err.classList.remove('is-visible');
          err.textContent = '';
        }
      });
      return valid;
    }

    contactForm?.addEventListener('submit', async (e) => {
      e.preventDefault();
      if (!validateForm()) return;
      const submitBtn = contactForm.querySelector('.contact-modal__submit') as HTMLButtonElement;
      submitBtn.disabled = true;
      submitBtn.textContent = 'Sending...';
      if (contactStatus) {
        contactStatus.textContent = '';
        contactStatus.className = 'contact-modal__status';
      }

      try {
        const res = await fetch(contactForm.action, {
          method: 'POST',
          body: new FormData(contactForm),
          headers: { 'Accept': 'application/json' },
        });
        if (res.ok) {
          contactForm.reset();
          contactForm.querySelectorAll('.contact-modal__input').forEach((input) => {
            input.classList.remove('is-invalid');
          });
          contactForm.querySelectorAll('.contact-modal__error').forEach((err) => {
            (err as HTMLElement).classList.remove('is-visible');
            err.textContent = '';
          });
          if (contactStatus) {
            contactStatus.textContent = "Message sent. You're the best!";
            contactStatus.classList.add('contact-modal__status--success');
          }
        } else {
          if (contactStatus) {
            contactStatus.textContent = 'Something went wrong. Please try again.';
            contactStatus.classList.add('contact-modal__status--error');
          }
        }
      } catch {
        if (contactStatus) {
          contactStatus.textContent = 'Something went wrong. Please try again.';
          contactStatus.classList.add('contact-modal__status--error');
        }
      }
      submitBtn.disabled = false;
      submitBtn.textContent = 'Send';
    });
  });
</script>
