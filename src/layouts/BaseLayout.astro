    <script is:inline>
      (function() {
        var colors = ['#f3ec50', '#f661d7', '#4addde', '#7ca9d3', '#f9c4d7', '#cacdd5'];

        // Detect if this is internal navigation (link click within site)
        var nav = performance.getEntriesByType('navigation')[0];
        var isReload = nav && nav.type === 'reload';
        var isSameOrigin = document.referrer && document.referrer.indexOf(location.origin) === 0;
        var isInternalNav = isSameOrigin && !isReload;

        var color = isInternalNav ? sessionStorage.getItem('accent') : null;

        if (!color) {
          var lastIndex = parseInt(localStorage.getItem('accentIndex') || '-1', 10);
          var nextIndex = (lastIndex + 1) % colors.length;
          localStorage.setItem('accentIndex', String(nextIndex));
          color = colors[nextIndex];
          sessionStorage.setItem('accent', color);
        }

        // Parse hex to RGB
        var r = parseInt(color.slice(1, 3), 16);
        var g = parseInt(color.slice(3, 5), 16);
        var b = parseInt(color.slice(5, 7), 16);

        // Relative luminance
        var luminance = (0.299 * r + 0.587 * g + 0.114 * b) / 255;

        // If color is too light for text on cream bg, darken it
        var textColor = color;
        if (luminance > 0.5) {
          var factor = 0.45;
          var dr = Math.round(r * factor);
          var dg = Math.round(g * factor);
          var db = Math.round(b * factor);
          textColor = '#' + ((1 << 24) + (dr << 16) + (dg << 8) + db).toString(16).slice(1);
        }

        document.documentElement.style.setProperty('--color-accent', color);
        document.documentElement.style.setProperty('--color-accent-text', textColor);
      })();
